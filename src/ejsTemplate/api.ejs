import request from '@/utils/request'

/**
 * 查询 <%= comment %> 列表
 * @param {Object} data
 * @returns
 */
export function list<%= fn.snakeFormatHump(name, true) %>(data) {
  return request({
    url: '<%= listApi %>',
    method: 'GET',
    params: data,
  })
}

/**
 * 查询 <%= comment %> 详情
 * @param {Number} id
 * @returns
 */
export function detail<%= fn.snakeFormatHump(name, true) %>(data) {
